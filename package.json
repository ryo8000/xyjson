{
  "name": "xyjson",
  "displayName": "XYJson - XML YAML JSON Converter",
  "description": "Convert and format XML, YAML, and JSON directly in VS Code. Supports minify and pretty formatting.",
  "version": "0.0.6",
  "author": "Ryo Hasegawa",
  "publisher": "ryo8000",
  "icon": "icon.png",
  "license": "MIT",
  "repository": "https://github.com/ryo8000/xyjson.git",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "json",
    "xml",
    "yaml",
    "yml",
    "converter",
    "formatter",
    "format",
    "minify",
    "beautify",
    "transform",
    "json to xml",
    "xml to json",
    "json to yaml",
    "yaml to json",
    "xml to yaml",
    "yaml to xml"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xyjson.toJson",
        "title": "Convert to JSON"
      },
      {
        "command": "xyjson.toXml",
        "title": "Convert to XML"
      },
      {
        "command": "xyjson.toYaml",
        "title": "Convert to YAML"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "xyjson.toJson",
          "group": "xyjson",
          "when": "editorLangId == xml || editorLangId == yaml"
        },
        {
          "command": "xyjson.toXml",
          "group": "xyjson",
          "when": "editorLangId == json || editorLangId == jsonc || editorLangId == yaml"
        },
        {
          "command": "xyjson.toYaml",
          "group": "xyjson",
          "when": "editorLangId == json || editorLangId == jsonc || editorLangId == xml"
        }
      ]
    },
    "configuration": {
      "properties": {
        "xyjson.minify": {
          "type": "boolean",
          "default": false,
          "description": "Minify output instead of pretty formatting when converting XML/JSON/YAML."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "copy-fixtures": "node ./scripts/copy-fixtures.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run copy-fixtures && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "fast-xml-parser": "5.4.1",
    "js-yaml": "4.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "4.0.9",
    "@types/mocha": "10.0.10",
    "@types/node": "25.x",
    "@types/vscode": "1.109.0",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "eslint": "10.0.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0"
  }
}
