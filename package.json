{
  "name": "xyjson",
  "displayName": "XYJson",
  "description": "Mutual conversion between XML, JSON, and YAML formats",
  "version": "0.0.3",
  "author": "Ryo Hasegawa",
  "publisher": "ryo8000",
  "icon": "icon.png",
  "license": "MIT",
  "repository": "https://github.com/ryo8000/xyjson.git",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "converter",
    "xml converter",
    "json converter",
    "yaml converter",
    "xml json",
    "xml yaml",
    "json xml",
    "json yaml",
    "yaml xml",
    "yaml json"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xyjson.toJson",
        "title": "Convert to JSON"
      },
      {
        "command": "xyjson.toXml",
        "title": "Convert to XML"
      },
      {
        "command": "xyjson.toYaml",
        "title": "Convert to YAML"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "xyjson.toJson",
          "group": "xyjson",
          "when": "editorLangId == xml || editorLangId == yaml"
        },
        {
          "command": "xyjson.toXml",
          "group": "xyjson",
          "when": "editorLangId == json || editorLangId == jsonc || editorLangId == yaml"
        },
        {
          "command": "xyjson.toYaml",
          "group": "xyjson",
          "when": "editorLangId == json || editorLangId == jsonc || editorLangId == xml"
        }
      ]
    },
    "configuration": {
      "properties": {
        "xyjson.minify": {
          "type": "boolean",
          "default": false,
          "description": "Minify output instead of pretty formatting when converting XML/JSON/YAML."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "fast-xml-parser": "5.3.5",
    "js-yaml": "4.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "4.0.9",
    "@types/mocha": "10.0.10",
    "@types/node": "25.x",
    "@types/vscode": "1.108.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "eslint": "9.39.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0"
  }
}
